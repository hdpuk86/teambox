<p id="notice"><%= notice %></p>

<p>
  <strong>Team members:</strong>

  <table>
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @grouping.team_members.each do |team_member| %>
        <tr>
          <td><%= team_member.first_name %></td>
          <td><%= team_member.last_name %></td>
          <td><%= link_to 'Show', team_member %></td>
          <td><%= link_to 'Edit', edit_team_member_path(team_member) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>

