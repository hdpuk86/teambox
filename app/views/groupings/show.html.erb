<div class='card my-3'>
  <div class="card-header">
    <h1>Viewing: Grouping <%= @grouping.id %></h1>
  </div>

  <div class="card-body">
    <h2 class="my-3">Team members:</h2>

    <ul>
      <% @grouping.team_members.each do |team_member| %>
        <li class="list-group-item <%= cycle('list-group-item-dark', 'list-group-item-light') %>">
          <div class="row">
            <div class="col-12 col-md-4 font-weight-bold">
              Name: <%= team_member.first_name %> <%= team_member.last_name %>
            </div>

              <div class="col-12 col-md-4 text-muted">
                <% if team_member.grouping_id.present? %>
                  Group: <%= team_member.grouping_id %>
                <% end%>
              </div>

            <div class="col-12 col-md-4 d-flex justify-content-around flex-col">
              <%= link_to 'More Details', team_member, class: 'btn btn-primary my-3' %>
              <%= link_to 'Edit', edit_team_member_path(team_member), class: 'btn btn-secondary my-3' %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="flex my-3">
  <%= link_to 'Show all groupings', groupings_path %>
</div>
